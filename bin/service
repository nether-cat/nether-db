#!/usr/bin/env node

const app = require('../lib/server');
const port = normalizePort(process.env.PORT || '3000');

app.listen(port, function () {
  console.log('Server running on http://localhost:' + port);
});

function normalizePort (val) {
  let port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}
